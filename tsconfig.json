{
   "compilerOptions": {
      "experimentalDecorators": true,
      "module": "commonjs",
      "target": "ES2021",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "declaration": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strict": true
   },
   "exclude": ["node_modules", "dist"],
   "include": ["src"]
}
